
@{
    ViewBag.Title = "WelcomeADM";
}

<h2>WelcomeADM</h2>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/css/bootstrap-select.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" style="margin-left:-315px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Employee Details</h5>
                <button type="button" class="close clr" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-5">
                            <input type="hidden" class="form-control" id="txtUserID" readonly />
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input type="text" class="form-control" id="txtUserName" placeholder="Enter User Name" />
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>PassWord</label>
                                    <input type="text" class="form-control" id="txtPassCode" placeholder="Enter PassWord" />
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>Salary</label>
                                    <input type="text" class="form-control" id="txtSalary" placeholder="Enter Salary" />
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" id="txtEmail" placeholder="Enter Email" />
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select id="ddGender" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>State</label>
                                    <select id="ddState" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-4 col-sm-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <select id="ddCity" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="updateonsubmit()" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary clr" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <button data-toggle="modal" data-target="#staticBackdrop" class="btn btn-primary" id="addRow">Add new row</button>

            <table id="tblclient" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                <thead>
                    <tr> 						
                        <td>UserID</td>
                        <td>UserName</td>
                        <td>Salary</td>
                        <td>Email</td>
                        <td>State</td>
                        <td>City</td>
                        <td>Gender</td>
                        <td>Actions</td>
                        <td>Actions</td>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>
@section scripts{
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="~/scripts/DataClient.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
}